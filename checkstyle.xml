<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
        "http://www.puppycrawl.com/dtds/configuration_1_3.dtd">

<module name="Checker">

    <!--Расширение файла должно быть java, properties, xml-->
    <property name="fileExtensions" value="java, properties, xml"/>

    <!-- Checks for Size Violations.                   , XmlHighlighting, XmlHighlighting -->
    <!-- See http://checkstyle.sf.net/config_sizes.html, XmlHighlighting, XmlHighlighting -->
    <module name="FileLength"/>

    <!-- Checks for Headers                               , XmlHighlighting, XmlHighlighting -->
    <!-- See http://checkstyle.sf.net/config_header.html  , XmlHighlighting, XmlHighlighting -->
    <!-- <module name="Header">, XmlHighlighting, XmlHighlighting -->
    <!--   <property name="headerFile" value="${checkstyle.header.file}"/>, XmlHighlighting, XmlHighlighting -->
    <!--   <property name="fileExtensions" value="java"/>, XmlHighlighting, XmlHighlighting -->
    <!-- </module>, XmlHighlighting, XmlHighlighting -->

    <module name="TreeWalker">

        <!-- Checks for Naming Conventions.                 , XmlHighlighting, XmlHighlighting -->
        <!-- See http://checkstyle.sf.net/config_naming.html, XmlHighlighting, XmlHighlighting -->
        <module name="ConstantName"/>
        <!--<module name="LocalFinalVariableName"/>-->
        <module name="LocalVariableName"/>
        <module name="MemberName"/>
        <module name="MethodName"/>
        <module name="PackageName">
            <property name="format" value="^[a-z]+(\.[a-z0-9]*)*$"/>
        </module>
        <module name="ParameterName"/>
        <module name="StaticVariableName"/>
        <module name="TypeName"/>

        <!-- Checks for Size Violations.                   , XmlHighlighting, XmlHighlighting -->
        <!-- See http://checkstyle.sf.net/config_sizes.html, XmlHighlighting, XmlHighlighting -->
        <!--<module name="LineLength"/>-->
        <module name="MethodLength"/>
        <module name="ParameterNumber"/>

        <!-- Checks for whitespace                              , XmlHighlighting, XmlHighlighting -->
        <!-- See http://checkstyle.sf.net/config_whitespace.html, XmlHighlighting, XmlHighlighting -->
        <module name="EmptyForIteratorPad"/>
        <module name="GenericWhitespace"/>
        <module name="MethodParamPad"/>
        <module name="NoWhitespaceAfter"/>
        <module name="NoWhitespaceBefore"/>
        <module name="OperatorWrap"/>
        <module name="ParenPad"/>
        <module name="TypecastParenPad"/>
        <module name="WhitespaceAfter"/>
        <module name="WhitespaceAround"/>

        <!-- Modifier Checks                                   , XmlHighlighting, XmlHighlighting -->
        <!-- See http://checkstyle.sf.net/config_modifiers.html, XmlHighlighting, XmlHighlighting -->

        <!-- Checks for blocks. You know, those {}'s        , XmlHighlighting, XmlHighlighting -->
        <!-- See http://checkstyle.sf.net/config_blocks.html, XmlHighlighting, XmlHighlighting -->
        <module name="AvoidNestedBlocks"/>
        <module name="EmptyBlock"/>
        <module name="LeftCurly"/>
        <module name="NeedBraces"/>
        <module name="RightCurly"/>

        <!-- Checks for common coding problems              , XmlHighlighting, XmlHighlighting -->
        <!-- See http://checkstyle.sf.net/config_coding.html, XmlHighlighting, XmlHighlighting -->
        <!--<module name="AvoidInlineConditionals"/>-->
        <module name="EmptyStatement"/>
        <module name="EqualsHashCode"/>
        <!--<module name="HiddenField"/>-->
        <module name="IllegalInstantiation"/>
        <module name="InnerAssignment"/>
        <!--<module name="MagicNumber"/>-->
        <module name="MissingSwitchDefault"/>
        <module name="SimplifyBooleanExpression"/>
        <module name="SimplifyBooleanReturn"/>

        <!-- Checks for class design                        , XmlHighlighting, XmlHighlighting -->
        <!-- See http://checkstyle.sf.net/config_design.html, XmlHighlighting, XmlHighlighting -->
        <!--<module name="DesignForExtension"/>-->
        <!--<module name="FinalClass"/>-->
        <!--<module name="HideUtilityClassConstructor"/>-->
        <module name="InterfaceIsType"/>

        <!-- Miscellaneous other checks.                  , XmlHighlighting, XmlHighlighting -->
        <!-- See http://checkstyle.sf.net/config_misc.html, XmlHighlighting, XmlHighlighting -->
        <module name="ArrayTypeStyle"/>
        <!--<module name="FinalParameters"/>-->
        <module name="TodoComment"/>
        <module name="UpperEll"/>

    </module>

</module>
